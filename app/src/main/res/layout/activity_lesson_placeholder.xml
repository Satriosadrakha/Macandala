        <Button
            android:id="@+id/kaganga2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lesson 3 \nKaganga ca, ja, nya" />

        <Button
            android:id="@+id/kaganga3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lesson 4 \nKaganga ta, da, na" />

        <Button
            android:id="@+id/kaganga4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lesson 5 \nKaganga pa, ba, ma" />

        <Button
            android:id="@+id/kaganga5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lesson 6 \nKaganga ya, ra, la" />

        <Button
            android:id="@+id/kaganga6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lesson 7 \nKaganga wa, sa, ha" />

        <Button
            android:id="@+id/kaganga7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lesson 8 \nKaganga fa, qa, va, xa, za" />

