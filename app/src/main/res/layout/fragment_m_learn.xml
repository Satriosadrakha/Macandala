<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mLearnFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mLearnFragment">

    <ScrollView
        android:id="@+id/sView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mandalabackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <!--Left Side-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <!--Aksara-->
                <LinearLayout
                    android:id="@+id/aksara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_menu_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="2dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginRight="2dp">

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="64dp"
                        android:src="@drawable/palamacanbw"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aksara"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <!--Sasatoan-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_menu_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="2dp">

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="64dp"
                        android:src="@drawable/starbw"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic 2"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <!--Basic 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_menu_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="2dp">

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="64dp"
                        android:src="@drawable/color"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warna"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>

            <!--Right Side-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:id="@+id/aboutMandala"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Tentang Kami"
                    android:background="@drawable/main_menu_button"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp" />
                <LinearLayout
                    android:id="@+id/basic_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_menu_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="2dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="92dp"
                        android:src="@drawable/star"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic 1"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/games"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_menu_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="2dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/animalbw"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hewan"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_menu_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="2dp">

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="80dp"
                        android:src="@drawable/test"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>